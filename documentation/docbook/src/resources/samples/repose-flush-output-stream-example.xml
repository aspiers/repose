<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
    <repose-cluster id="repose">
        <nodes>
            <node id="node1" hostname="127.0.0.1" http-port="8088"/>
        </nodes>
        <filters>
            <filter name="http-logging"/>
            <filter name="ip-identity"/>
            <filter name="flush-output"/>
            <filter name="default-router"/>
        </filters>
        <destinations>
            <endpoint id="openrepose" protocol="http" hostname="www.openrepose.org" root-path="/" port="80"
                      default="true"/>
        </destinations>
    </repose-cluster>
</system-model>