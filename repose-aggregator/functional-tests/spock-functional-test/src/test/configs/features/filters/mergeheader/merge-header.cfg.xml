<?xml version="1.0" encoding="UTF-8"?>

<merge-header xmlns='http://docs.openrepose.org/repose/merge-header/v1.0'>
    <request>
        <!-- always merge the accept-charset header on requests -->
        <header>accept-charset</header>
        <!-- this header may not always exist, so we'll verify that it doesn't get added -->
        <header>x-random</header>
    </request>
    <response>
        <!-- an arbitrary header to ensure that is merged on the way out -->
        <header>x-split-header</header>
        <!-- this one won't exist from teh origin, so we'll make sure I don't accidentally add it -->
        <header>x-random</header>
    </response>
</merge-header>
