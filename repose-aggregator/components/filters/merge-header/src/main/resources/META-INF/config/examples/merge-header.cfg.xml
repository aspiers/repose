<?xml version="1.0" encoding="UTF-8"?>

<merge-header xmlns='http://docs.openrepose.org/repose/merge-header/v1.0'>
    <!-- both response/request configs are optional, if neither are specified, this filter is a no-op -->
    <response>
        <header>your-mother</header>
        <header>your-father</header>
        <header>your-sister</header>
    </response>
    <request>
        <header>step-mother</header>
        <header>step-father</header>
        <header>step-sister</header>
    </request>
</merge-header>
